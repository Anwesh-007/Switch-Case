#include <stdio.h>

int main() {
     printf ("Pick an item: \n1. pen\n2. pencil\n3. eraser\n4. books");
     int choice=0;
     scanf("%d", &choice);
     switch(choice)
    {
        case 1:
        printf ("You picked pen.");
        break;
         case 2:
        printf ("You picked pen.");
        break;
         case 3:
        printf ("You picked pen.");
        break;
         case 4:
        printf ("You picked pen.");
        break;
        case 5:
        default: printf ("Invalid Choice");
    }    
}
